{
  "name": "fact-video-generator",
  "version": "1.0.0",
  "scripts": {
    "dev": "rm -rf ./frames && mkdir frames && ts-node-dev -r tsconfig-paths/register ./src/index.ts && ffmpeg -y -framerate 25 -i './frames/frame-%d.png' -c:v libx264 -pix_fmt yuv420p out.mp4",
    "build": "rimraf dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node ./dist/index.js",
    "lint": "eslint \"./src/**/*.ts\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.4.1",
    "prettier": "2.8.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@types/node": "^20.8.9",
    "@types/node-fetch": "^2.6.7",
    "@types/shelljs": "^0.8.14",
    "canvas": "^2.11.2",
    "canvas-node": "^0.3.23",
    "dotenv": "^16.3.1",
    "execa": "5.1.1",
    "get-audio-duration": "^4.0.1",
    "knex": "^3.0.1",
    "konva": "^9.2.2",
    "node-fetch": "^2.6.6",
    "pg": "^8.11.3",
    "shelljs": "^0.8.5"
  }
}
