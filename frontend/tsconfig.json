{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "theme": ["src/theme"],
      "@screens/*": ["src/screens/*"],
      "@layout/*": ["src/layout/*"],
      "@components*": ["src/components"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
